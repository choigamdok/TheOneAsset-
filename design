<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The One Financial Suite - Premium Asset Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Import Maps for React & Libraries via ESM -->
    <script type="importmap">
    {
      "imports": {
        "react": "https://esm.sh/react@18.2.0",
        "react-dom/client": "https://esm.sh/react-dom@18.2.0/client",
        "lucide-react": "https://esm.sh/lucide-react@0.263.1"
      }
    }
    </script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <!-- Google Fonts: Playfair Display (Serif) for headings, Inter/Noto Sans (Sans) for body -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@300;400;500;600&family=Noto+Sans+KR:wght@300;400;500;700&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        serif: ['"Playfair Display"', 'serif'],
                        sans: ['"Inter"', '"Noto Sans KR"', 'sans-serif'],
                        mono: ['"Roboto Mono"', 'monospace'],
                    },
                    colors: {
                        mckinsey: {
                            navy: '#051c2c',   // Deep Corporate Navy
                            blue: '#005eb8',   // Professional Blue
                            light: '#f4f6f8',  // Light Background
                            grey: '#636c72',   // Subtext
                            border: '#e0e0e0', // Subtle Border
                        },
                        // Semantic Colors
                        positive: '#0070c0', 
                        accent: '#00b0f0',
                    },
                    boxShadow: {
                        'soft': '0 2px 10px rgba(0, 0, 0, 0.03)',
                        'card': '0 1px 3px rgba(0,0,0,0.05)',
                    }
                }
            }
        }
    </script>
    <style>
        /* Custom Scrollbar - Minimalist */
        ::-webkit-scrollbar {
            width: 4px;
            height: 4px;
        }
        ::-webkit-scrollbar-track {
            background: transparent;
        }
        ::-webkit-scrollbar-thumb {
            background: #cbd5e1;
        }
        input[type="number"]::-webkit-inner-spin-button,
        input[type="number"]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
        .animate-fade-in {
            animation: fadeIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* Table Styling - Clean Report Style */
        .report-table th {
            font-family: 'Inter', sans-serif;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #636c72;
            border-bottom: 1px solid #051c2c;
            padding: 12px 16px;
            background-color: #fff;
        }
        .report-table td {
            padding: 12px 16px;
            border-bottom: 1px solid #f0f0f0;
            font-size: 0.875rem;
        }
        .report-table tr:last-child td {
            border-bottom: none;
        }
    </style>
</head>

<body class="bg-white text-mckinsey-navy font-sans h-screen overflow-hidden flex flex-col md:flex-row antialiased">
    <div id="root" class="w-full h-full"></div>

    <script type="text/babel" data-type="module">
        import React, { useState, useEffect, useRef, useMemo } from 'react';
        import { createRoot } from 'react-dom/client';
        import { 
            LayoutDashboard, 
            TrendingUp, 
            Clock, 
            Umbrella, 
            Calendar, 
            DollarSign, 
            Briefcase, 
            Menu, 
            X,
            ChevronRight,
            Home,
            GraduationCap,
            Plane,
            Stethoscope,
            Coins,
            PlusCircle,
            Trash2,
            List,
            AlertCircle,
            CheckCircle,
            ArrowRight,
            Sparkles,
            Bot,
            Loader,
            Settings,
            Key
        } from 'lucide-react';

        // --- Utility Functions ---
        const formatMoney = (n) => new Intl.NumberFormat('ko-KR').format(Math.round(n));
        const parseMoney = (s) => parseInt(String(s).replace(/[^0-9]/g, '')) || 0;

        // --- Gemini API Helper (Modified for Dynamic Key) ---
        const getGeminiResponse = async (prompt, apiKey) => {
            if (!apiKey) {
                return "API 키가 설정되지 않았습니다. 왼쪽 하단 설정(⚙️) 메뉴에서 Google Gemini API 키를 등록해주세요.";
            }
            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{ parts: [{ text: prompt }] }]
                    })
                });
                const data = await response.json();
                if (data.error) {
                    throw new Error(data.error.message);
                }
                return data.candidates?.[0]?.content?.parts?.[0]?.text || "분석을 완료할 수 없습니다. 잠시 후 다시 시도해주세요.";
            } catch (error) {
                console.error("AI Error:", error);
                return `오류가 발생했습니다: ${error.message}. API 키가 올바른지 확인해주세요.`;
            }
        };

        // --- AI Widget Component ---
        const AIInsightWidget = ({ title, promptContext, buttonLabel, apiKey }) => {
            const [loading, setLoading] = useState(false);
            const [insight, setInsight] = useState(null);

            const handleAnalyze = async () => {
                setLoading(true);
                setInsight(null);
                
                const prompt = `
                    당신은 맥킨지(McKinsey) 스타일의 논리적이고 통찰력 있는 '수석 재무 컨설턴트'입니다.
                    아래 데이터를 바탕으로 고객에게 전문적인 재무 조언을 한국어로 작성해 주세요.
                    
                    [데이터]
                    ${promptContext}
                    
                    [요청사항]
                    1. 핵심을 꿰뚫는 통찰을 3~4문장으로 요약하세요.
                    2. 어조는 정중하고 전문적이며, 신뢰감을 주어야 합니다.
                    3. 마크다운 형식은 사용하지 말고 줄글로 작성하세요.
                    4. 구체적인 수치를 인용하여 설득력을 높이세요.
                `;

                const result = await getGeminiResponse(prompt, apiKey);
                setInsight(result);
                setLoading(false);
            };

            return (
                <div className="mt-6 bg-mckinsey-light border border-mckinsey-border p-5 relative overflow-hidden group transition-all hover:shadow-md">
                    {/* Background Pattern */}
                    <div className="absolute top-0 right-0 p-4 opacity-10">
                        <Sparkles className="w-12 h-12 text-mckinsey-blue" />
                    </div>

                    <div className="relative z-10">
                        <div className="flex justify-between items-center mb-4">
                            <h4 className="font-serif text-mckinsey-navy flex items-center gap-2">
                                <Bot className="w-5 h-5 text-mckinsey-blue" />
                                {title || "AI Financial Insight"}
                            </h4>
                            {!insight && !loading && (
                                <button 
                                    onClick={handleAnalyze}
                                    className="flex items-center gap-2 px-4 py-2 bg-white border border-mckinsey-blue text-mckinsey-blue text-xs font-bold uppercase tracking-widest hover:bg-mckinsey-blue hover:text-white transition-all"
                                >
                                    <Sparkles className="w-3 h-3" /> {buttonLabel || "Generate Analysis"}
                                </button>
                            )}
                        </div>

                        {loading && (
                            <div className="flex items-center gap-3 text-mckinsey-grey text-sm py-4">
                                <Loader className="w-4 h-4 animate-spin text-mckinsey-blue" />
                                <span>Gemini가 데이터를 분석하고 있습니다...</span>
                            </div>
                        )}

                        {insight && (
                            <div className="animate-fade-in">
                                <div className="text-sm text-mckinsey-navy leading-relaxed font-light border-l-2 border-mckinsey-blue pl-4 py-1">
                                    {insight}
                                </div>
                                <button 
                                    onClick={() => setInsight(null)}
                                    className="mt-4 text-[10px] text-mckinsey-grey hover:text-mckinsey-blue underline"
                                >
                                    새로운 분석 닫기
                                </button>
                            </div>
                        )}
                    </div>
                </div>
            );
        };

        // ==========================================
        // 1. Wealth Growth Simulator Component
        // ==========================================
        const WealthSimulator = ({ apiKey }) => {
            const [state, setState] = useState({
                age: 35,
                duration: 30,
                principal: 50000000,
                rateA: "3.5",
                rateB: "7.0"
            });
            
            const chartRef = useRef(null);
            const chartInstance = useRef(null);

            const handleIntInput = (field, val) => {
                let clean = val.replace(/[^0-9]/g, '').replace(/^0+(?!$)/, '');
                if (clean === '') clean = '0';
                setState({ ...state, [field]: Number(clean) });
            };

            const handleRateInput = (field, val) => {
                if (/^\d*\.?\d*$/.test(val)) {
                    setState({ ...state, [field]: val });
                }
            };

            const results = useMemo(() => {
                const data = [];
                const rA = parseFloat(state.rateA) || 0;
                const rB = parseFloat(state.rateB) || 0;

                for (let i = 1; i <= state.duration; i++) {
                    const totalA = state.principal * Math.pow((1 + rA / 100), i);
                    const totalB = state.principal * Math.pow((1 + rB / 100), i);
                    data.push({
                        year: i,
                        currentAge: state.age + i,
                        totalA,
                        totalB,
                        accRateA: (totalA / state.principal) * 100,
                        accRateB: (totalB / state.principal) * 100,
                        diff: totalB - totalA
                    });
                }
                return data;
            }, [state]);

            const final = results.length > 0 ? results[results.length - 1] : { totalA: 0, totalB: 0, diff: 0, accRateA: 0, accRateB: 0 };

            useEffect(() => {
                if (chartRef.current) {
                    const ctx = chartRef.current.getContext('2d');
                    if (chartInstance.current) chartInstance.current.destroy();

                    const gradA = ctx.createLinearGradient(0, 0, 0, 400);
                    gradA.addColorStop(0, 'rgba(5, 28, 44, 0.1)'); // Mckinsey Navy transparent
                    gradA.addColorStop(1, 'rgba(5, 28, 44, 0.0)');
                    const gradB = ctx.createLinearGradient(0, 0, 0, 400);
                    gradB.addColorStop(0, 'rgba(0, 94, 184, 0.1)'); // Mckinsey Blue transparent
                    gradB.addColorStop(1, 'rgba(0, 94, 184, 0.0)');

                    chartInstance.current = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: results.map(d => `${d.currentAge}세`),
                            datasets: [
                                {
                                    label: 'Conservative (Plan A)',
                                    data: results.map(d => d.totalA),
                                    borderColor: '#636c72', // Grey for conservative
                                    backgroundColor: 'transparent',
                                    borderWidth: 2,
                                    pointRadius: 0,
                                    tension: 0.4
                                },
                                {
                                    label: 'Aggressive (Plan B)',
                                    data: results.map(d => d.totalB),
                                    borderColor: '#005eb8', // Blue for aggressive
                                    backgroundColor: gradB,
                                    fill: true,
                                    borderWidth: 2,
                                    pointRadius: 0,
                                    tension: 0.4
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: { mode: 'index', intersect: false },
                            plugins: { 
                                legend: { 
                                    display: true, 
                                    position: 'top',
                                    align: 'end',
                                    labels: { usePointStyle: true, boxWidth: 8, font: { family: 'Inter' } }
                                },
                                tooltip: {
                                    backgroundColor: '#051c2c',
                                    titleFont: { family: 'Playfair Display', size: 14 },
                                    bodyFont: { family: 'Inter', size: 12 },
                                    padding: 12,
                                    cornerRadius: 0,
                                    displayColors: false
                                }
                            },
                            scales: {
                                x: { grid: { display: false }, ticks: { font: { family: 'Inter' } } },
                                y: { 
                                    grid: { borderDash: [2, 4], color: '#e0e0e0' },
                                    ticks: { callback: (v) => v >= 100000000 ? (v/100000000).toFixed(0) + '억' : (v/10000).toFixed(0) + '만', font: { family: 'Inter' } }
                                }
                            }
                        }
                    });
                }
                return () => { if (chartInstance.current) chartInstance.current.destroy(); };
            }, [results]);

            return (
                <div className="space-y-8 animate-fade-in pb-20 max-w-7xl mx-auto">
                    {/* Header Section */}
                    <div className="border-b border-mckinsey-navy pb-6 flex justify-between items-end">
                        <div>
                            <h2 className="font-serif text-3xl text-mckinsey-navy mb-2">Asset Growth Simulation</h2>
                            <p className="text-mckinsey-grey text-sm font-light leading-relaxed">
                                현재 나이와 투자 기간, 초기 투자금액을 설정하여 미래 가치를 예측하십시오.<br/>
                                수익률 변화에 따른 자산의 기하급수적 성장 효과를 시각화합니다.
                            </p>
                        </div>
                        <div className="hidden md:block">
                            <span className="inline-flex items-center gap-1 px-3 py-1 bg-mckinsey-light text-[10px] font-bold text-mckinsey-blue uppercase tracking-widest border border-mckinsey-border">
                                <Sparkles className="w-3 h-3" /> AI Enhanced
                            </span>
                        </div>
                    </div>

                    <div className="grid grid-cols-1 lg:grid-cols-12 gap-8">
                        {/* Left Column: Inputs */}
                        <div className="lg:col-span-4 space-y-8">
                            <div className="bg-white p-6 border border-mckinsey-border shadow-soft">
                                <h3 className="text-xs font-bold text-mckinsey-grey uppercase tracking-widest mb-6">Key Assumptions</h3>
                                
                                <div className="space-y-6">
                                    <div className="group">
                                        <label className="block text-xs font-medium text-mckinsey-navy mb-1 group-focus-within:text-mckinsey-blue transition-colors">현재 나이 (세)</label>
                                        <input 
                                            type="tel" 
                                            value={state.age === 0 ? '' : state.age} 
                                            onChange={(e) => handleIntInput('age', e.target.value)} 
                                            className="w-full border-b border-mckinsey-border py-2 text-lg font-serif text-mckinsey-navy focus:outline-none focus:border-mckinsey-blue transition-all bg-transparent" 
                                        />
                                    </div>
                                    <div className="group">
                                        <label className="block text-xs font-medium text-mckinsey-navy mb-1 group-focus-within:text-mckinsey-blue transition-colors">투자 기간 (년)</label>
                                        <input 
                                            type="tel" 
                                            value={state.duration === 0 ? '' : state.duration} 
                                            onChange={(e) => handleIntInput('duration', e.target.value)} 
                                            className="w-full border-b border-mckinsey-border py-2 text-lg font-serif text-mckinsey-navy focus:outline-none focus:border-mckinsey-blue transition-all bg-transparent" 
                                        />
                                        <div className="text-right text-[10px] text-mckinsey-grey mt-1">예상 종료: {state.age + state.duration}세</div>
                                    </div>
                                    <div className="group">
                                        <label className="block text-xs font-medium text-mckinsey-navy mb-1 group-focus-within:text-mckinsey-blue transition-colors">초기 투자 원금 (원)</label>
                                        <input 
                                            type="text" 
                                            value={formatMoney(state.principal)} 
                                            onChange={(e) => setState({...state, principal: parseMoney(e.target.value)})} 
                                            className="w-full border-b border-mckinsey-border py-2 text-xl font-serif text-mckinsey-navy focus:outline-none focus:border-mckinsey-blue transition-all bg-transparent" 
                                        />
                                        <div className="flex gap-1 mt-3">
                                            {[50000000, 100000000, 200000000, 500000000].map(amt => (
                                                <button 
                                                    key={amt} 
                                                    onClick={() => setState({...state, principal: amt})}
                                                    className="flex-1 bg-mckinsey-light text-[10px] text-mckinsey-grey py-1 hover:bg-mckinsey-border transition-colors"
                                                >
                                                    {amt >= 100000000 ? (amt / 100000000) + '억' : (amt / 10000) + '만'}
                                                </button>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div className="bg-white p-6 border border-mckinsey-border shadow-soft">
                                <h3 className="text-xs font-bold text-mckinsey-grey uppercase tracking-widest mb-6">Rate Scenarios</h3>
                                <div className="space-y-6">
                                    {/* Plan A */}
                                    <div>
                                        <div className="flex justify-between items-end mb-2">
                                            <span className="text-sm font-serif text-mckinsey-grey">Plan A (Conservative)</span>
                                            <div className="flex items-baseline gap-1">
                                                <input 
                                                    type="text" 
                                                    inputMode="decimal"
                                                    value={state.rateA} 
                                                    onChange={(e) => handleRateInput('rateA', e.target.value)} 
                                                    className="w-12 text-right border-b border-mckinsey-border focus:border-mckinsey-navy focus:outline-none font-bold text-mckinsey-navy"
                                                />
                                                <span className="text-xs">%</span>
                                            </div>
                                        </div>
                                        <div className="flex gap-1">
                                            {[1, 2, 3, 4, 5].map(rate => (
                                                <button key={rate} onClick={() => setState({...state, rateA: String(rate)})} className={`flex-1 h-1 rounded-sm transition-all ${Math.round(parseFloat(state.rateA)) === rate ? 'bg-mckinsey-grey' : 'bg-mckinsey-light hover:bg-gray-300'}`}></button>
                                            ))}
                                        </div>
                                    </div>
                                    {/* Plan B */}
                                    <div>
                                        <div className="flex justify-between items-end mb-2">
                                            <span className="text-sm font-serif text-mckinsey-blue">Plan B (Aggressive)</span>
                                            <div className="flex items-baseline gap-1">
                                                <input 
                                                    type="text" 
                                                    inputMode="decimal"
                                                    value={state.rateB} 
                                                    onChange={(e) => handleRateInput('rateB', e.target.value)} 
                                                    className="w-12 text-right border-b border-mckinsey-border focus:border-mckinsey-blue focus:outline-none font-bold text-mckinsey-blue"
                                                />
                                                <span className="text-xs text-mckinsey-blue">%</span>
                                            </div>
                                        </div>
                                        <div className="flex gap-1">
                                            {[6, 7, 8, 9, 10].map(rate => (
                                                <button key={rate} onClick={() => setState({...state, rateB: String(rate)})} className={`flex-1 h-1 rounded-sm transition-all ${Math.round(parseFloat(state.rateB)) === rate ? 'bg-mckinsey-blue' : 'bg-mckinsey-light hover:bg-blue-200'}`}></button>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {/* Right Column: Visuals & Data */}
                        <div className="lg:col-span-8 space-y-8">
                            {/* Summary Cards */}
                            <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div className="bg-white border-t-2 border-mckinsey-grey p-5 shadow-soft">
                                    <div className="text-[10px] uppercase tracking-widest text-mckinsey-grey mb-2">Plan A Projection</div>
                                    <div className="text-2xl font-serif text-mckinsey-navy mb-1">{formatMoney(final.totalA)}</div>
                                    <div className="text-xs text-mckinsey-grey">수익률 {final.accRateA.toFixed(1)}%</div>
                                </div>
                                <div className="bg-white border-t-2 border-mckinsey-blue p-5 shadow-soft">
                                    <div className="text-[10px] uppercase tracking-widest text-mckinsey-blue mb-2">Plan B Projection</div>
                                    <div className="text-2xl font-serif text-mckinsey-blue mb-1">{formatMoney(final.totalB)}</div>
                                    <div className="text-xs text-mckinsey-grey">수익률 {final.accRateB.toFixed(1)}%</div>
                                </div>
                                <div className="bg-mckinsey-navy text-white p-5 shadow-soft">
                                    <div className="text-[10px] uppercase tracking-widest text-gray-400 mb-2">Gap Analysis</div>
                                    <div className="text-2xl font-serif mb-1">+{formatMoney(final.diff)}</div>
                                    <div className="text-xs text-gray-400">적극적 운용의 차이</div>
                                </div>
                            </div>

                            {/* Chart */}
                            <div className="bg-white p-6 border border-mckinsey-border shadow-soft">
                                <div className="mb-6">
                                    <h3 className="font-serif text-lg text-mckinsey-navy">Value Creation Trajectory</h3>
                                    <p className="text-xl font-light text-mckinsey-grey mt-2">
                                        같은 돈, 같은 시간. <span className="text-mckinsey-blue font-medium">다른 수익률</span>, <span className="text-mckinsey-navy font-medium">전혀 다른 미래.</span>
                                    </p>
                                </div>
                                <div className="h-[280px]">
                                    <canvas ref={chartRef}></canvas>
                                </div>

                                {/* AI Widget Injection */}
                                <AIInsightWidget 
                                    apiKey={apiKey}
                                    title="AI Investment Commentary"
                                    buttonLabel="투자 시나리오 분석"
                                    promptContext={`
                                        사용자 나이: ${state.age}세
                                        투자 기간: ${state.duration}년 (예상 종료 나이: ${state.age + state.duration}세)
                                        초기 투자금: ${formatMoney(state.principal)}원
                                        
                                        [Plan A - 보수적]
                                        수익률: ${state.rateA}%
                                        최종 자산: ${formatMoney(final.totalA)}원
                                        총 수익률: ${final.accRateA.toFixed(1)}%
                                        
                                        [Plan B - 적극적]
                                        수익률: ${state.rateB}%
                                        최종 자산: ${formatMoney(final.totalB)}원
                                        총 수익률: ${final.accRateB.toFixed(1)}%
                                        
                                        [비교]
                                        자산 차이: ${formatMoney(final.diff)}원
                                        
                                        두 가지 플랜을 비교하고, 사용자의 나이(${state.age}세)와 투자 기간(${state.duration}년)을 고려하여
                                        적극적 투자(Plan B)가 감수할 만한 가치가 있는지, 아니면 보수적 접근이 나은지 조언해주세요.
                                    `}
                                />
                            </div>

                            {/* Detailed Table */}
                            <div className="bg-white border border-mckinsey-border shadow-soft overflow-hidden">
                                <div className="px-6 py-4 bg-mckinsey-light border-b border-mckinsey-border flex justify-between items-center">
                                    <h3 className="text-xs font-bold text-mckinsey-navy uppercase tracking-widest">Yearly Breakdown</h3>
                                    <span className="text-[10px] text-mckinsey-grey">Unit: KRW</span>
                                </div>
                                <div className="overflow-x-auto max-h-[300px] overflow-y-auto">
                                    <table className="w-full text-right report-table">
                                        <thead>
                                            <tr>
                                                <th className="text-center w-20">Age</th>
                                                <th>Plan A</th>
                                                <th>Plan B</th>
                                                <th className="bg-mckinsey-light text-mckinsey-navy font-bold">Difference</th>
                                            </tr>
                                        </thead>
                                        <tbody className="font-sans text-mckinsey-navy">
                                            {results.map((d) => (
                                                <tr key={d.year} className="hover:bg-mckinsey-light transition-colors">
                                                    <td className="text-center text-mckinsey-grey font-medium text-xs">{d.currentAge}</td>
                                                    <td>{formatMoney(d.totalA)}</td>
                                                    <td className="text-mckinsey-blue">{formatMoney(d.totalB)}</td>
                                                    <td className="bg-mckinsey-light font-bold">{formatMoney(d.diff)}</td>
                                                </tr>
                                            ))}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            );
        };

        // ==========================================
        // 2. Financial Sales Master Component
        // ==========================================
        const SalesMaster = ({ apiKey }) => {
            const [activeTab, setActiveTab] = useState('compound');
            
            // Sub-components state logic
            const [ccState, setCcState] = useState({ age: 45, goal: '', save: 300000, rate: 5, years: 10 });
            const compoundChartRef = useRef(null);
            const compoundChartInstance = useRef(null);

            const [cdState, setCdState] = useState({ age: 45, goal: '은퇴 자금', amount: 100000000, years: 20, delay: 5, rate: 6 });
            const [rpState, setRpState] = useState({ age: 40, retireAge: 65, pension: 3000000, saveYears: 10, saveRate: 5, deferYears: 15, deferRate: 5 });

            // Charts & Logic omitted for brevity, keeping existing logic structure but updating UI
            // --- Compound Logic ---
            useEffect(() => {
                if (activeTab === 'compound' && compoundChartRef.current) {
                    const data = [];
                    for (let i = 1; i <= ccState.years; i++) {
                        const monthlyRate = ccState.rate / 100 / 12;
                        const fv = ccState.save * ((Math.pow(1 + monthlyRate, i * 12) - 1) / monthlyRate);
                        const principal = ccState.save * 12 * i;
                        data.push({ age: ccState.age + i, principal, interest: fv - principal });
                    }

                    const ctx = compoundChartRef.current.getContext('2d');
                    if (compoundChartInstance.current) compoundChartInstance.current.destroy();

                    compoundChartInstance.current = new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: data.map(d => `${d.age}세`),
                            datasets: [
                                { label: 'Principal', data: data.map(d => d.principal), backgroundColor: '#cbd5e1', stack: 'stack1' },
                                { label: 'Interest', data: data.map(d => d.interest), backgroundColor: '#005eb8', stack: 'stack1' }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: { 
                                x: { stacked: true, grid: { display: false } }, 
                                y: { display: false, stacked: true } 
                            },
                            plugins: { legend: { display: false } }
                        }
                    });
                }
                return () => { if (compoundChartInstance.current) compoundChartInstance.current.destroy(); };
            }, [activeTab, ccState]);

            const ccResult = useMemo(() => {
                const monthlyRate = ccState.rate / 100 / 12;
                const totalMonths = ccState.years * 12;
                const fv = ccState.save * ((Math.pow(1 + monthlyRate, totalMonths) - 1) / monthlyRate);
                const principal = ccState.save * totalMonths;
                return { principal, total: fv, interest: fv - principal };
            }, [ccState]);
            // --- Delay Logic ---
            const cdResult = useMemo(() => {
                const calculatePMT = (target, r, n) => {
                    if (n <= 0) return 0;
                    const monthlyRate = r / 100 / 12;
                    const factor = ((Math.pow(1 + monthlyRate, n * 12) - 1) / monthlyRate);
                    return target / factor;
                };
                const nowPayment = calculatePMT(cdState.amount, cdState.rate, cdState.years);
                const remainYears = cdState.years - cdState.delay;
                const delayedPayment = calculatePMT(cdState.amount, cdState.rate, remainYears);
                return {
                    nowPayment,
                    nowTotal: nowPayment * 12 * cdState.years,
                    delayedPayment,
                    delayedTotal: delayedPayment * 12 * remainYears,
                    cost: (delayedPayment * 12 * remainYears) - (nowPayment * 12 * cdState.years)
                };
            }, [cdState]);

            const rpResult = useMemo(() => {
                const targetCorpus = (rpState.pension * 12) / 0.07;
                const requiredFVSave = targetCorpus / Math.pow(1 + rpState.deferRate / 100, rpState.deferYears);
                const monthlyRate = rpState.saveRate / 100 / 12;
                const factor = (Math.pow(1 + monthlyRate, rpState.saveYears * 12) - 1) / monthlyRate;
                const requiredMonthly = requiredFVSave / factor;
                return { targetCorpus, requiredFVSave, requiredMonthly };
            }, [rpState]);

            return (
                <div className="space-y-8 animate-fade-in pb-10 max-w-7xl mx-auto">
                    {/* Minimal Tabs */}
                    <div className="flex border-b border-mckinsey-border mb-8">
                        {[
                            { id: 'compound', label: '복리 시뮬레이터' },
                            { id: 'delay', label: '게으름 비용 (Delay Cost)' },
                            { id: 'retirement', label: '황금거위 은퇴설계' }
                        ].map(tab => (
                            <button
                                key={tab.id}
                                onClick={() => setActiveTab(tab.id)}
                                className={`px-6 py-3 text-sm font-bold tracking-wide transition-all border-b-2 ${activeTab === tab.id ? 'border-mckinsey-navy text-mckinsey-navy' : 'border-transparent text-mckinsey-grey hover:text-mckinsey-navy'}`}
                            >
                                {tab.label}
                            </button>
                        ))}
                    </div>

                    <div className="bg-white border border-mckinsey-border shadow-soft p-8">
                        {/* 1. Compound */}
                        {activeTab === 'compound' && (
                            <div className="grid md:grid-cols-12 gap-10">
                                <div className="md:col-span-4 space-y-6">
                                    <h4 className="font-serif text-xl text-mckinsey-navy mb-4">Input Parameters</h4>
                                    <div className="space-y-5">
                                        <div>
                                            <label className="block text-xs font-medium text-mckinsey-grey mb-1">현재 나이</label>
                                            <div className="flex items-center border-b border-mckinsey-border pb-1">
                                                <input type="tel" value={ccState.age === 0 ? '' : ccState.age} onChange={(e) => {
                                                    let clean = e.target.value.replace(/[^0-9]/g, '').replace(/^0+(?!$)/, '');
                                                    if (clean === '') clean = '0';
                                                    setCcState({...ccState, age: Number(clean)})
                                                }} className="w-full bg-transparent outline-none font-serif text-lg text-mckinsey-navy" />
                                                <span className="text-xs text-mckinsey-grey">세</span>
                                            </div>
                                        </div>
                                        <div>
                                            <label className="block text-xs font-medium text-mckinsey-grey mb-1">재무 목적</label>
                                            <input type="text" value={ccState.goal} onChange={(e) => setCcState({...ccState, goal: e.target.value})} className="w-full bg-transparent border-b border-mckinsey-border pb-1 outline-none font-serif text-lg text-mckinsey-navy placeholder-gray-300" placeholder="예: 은퇴, 교육, 주택자금" />
                                        </div>
                                        <div>
                                            <label className="block text-xs font-medium text-mckinsey-grey mb-1">월 저축액</label>
                                            <input type="text" value={formatMoney(ccState.save)} onChange={(e) => setCcState({...ccState, save: parseMoney(e.target.value)})} className="w-full bg-transparent border-b border-mckinsey-border pb-1 outline-none font-serif text-lg text-mckinsey-navy text-right" />
                                            <input type="range" min="100000" max="5000000" step="50000" value={ccState.save} onChange={(e) => setCcState({...ccState, save: Number(e.target.value)})} className="w-full mt-2 h-1 bg-mckinsey-light rounded-lg appearance-none cursor-pointer accent-mckinsey-navy" />
                                        </div>
                                        <div className="grid grid-cols-2 gap-4">
                                            <div>
                                                <label className="block text-xs font-medium text-mckinsey-grey mb-1">수익률</label>
                                                <div className="flex items-center border-b border-mckinsey-border pb-1">
                                                    <input type="number" value={ccState.rate} onChange={(e) => setCcState({...ccState, rate: Number(e.target.value)})} className="w-full bg-transparent outline-none font-serif text-lg text-mckinsey-navy" />
                                                    <span className="text-xs text-mckinsey-grey">%</span>
                                                </div>
                                            </div>
                                            <div>
                                                <label className="block text-xs font-medium text-mckinsey-grey mb-1">기간</label>
                                                <div className="flex items-center border-b border-mckinsey-border pb-1">
                                                    <input type="number" value={ccState.years} onChange={(e) => setCcState({...ccState, years: Number(e.target.value)})} className="w-full bg-transparent outline-none font-serif text-lg text-mckinsey-navy" />
                                                    <span className="text-xs text-mckinsey-grey">년</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div className="md:col-span-8 flex flex-col justify-between">
                                    <div className="h-64 mb-6">
                                        <canvas ref={compoundChartRef}></canvas>
                                    </div>
                                    <div className="grid grid-cols-3 gap-0 border-t border-mckinsey-border pt-6">
                                        <div className="pr-6 border-r border-mckinsey-border">
                                            <p className="text-xs text-mckinsey-grey uppercase tracking-widest mb-1">Principal</p>
                                            <p className="font-serif text-xl text-mckinsey-navy">{formatMoney(ccResult.principal)}</p>
                                        </div>
                                        <div className="px-6 border-r border-mckinsey-border">
                                            <p className="text-xs text-mckinsey-blue uppercase tracking-widest mb-1">Interest</p>
                                            <p className="font-serif text-xl text-mckinsey-blue">+{formatMoney(ccResult.interest)}</p>
                                        </div>
                                        <div className="pl-6">
                                            <p className="text-xs text-mckinsey-navy uppercase tracking-widest font-bold mb-1">Total Asset</p>
                                            <p className="font-serif text-2xl font-bold text-mckinsey-navy">{formatMoney(ccResult.total)}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        )}

                        {/* 2. Delay Cost */}
                        {activeTab === 'delay' && (
                            <div className="grid md:grid-cols-12 gap-10">
                                <div className="md:col-span-5 space-y-6">
                                    <h4 className="font-serif text-xl text-mckinsey-navy mb-4">Cost of Delay Analysis</h4>
                                    <div className="space-y-5">
                                        <div className="grid grid-cols-2 gap-4">
                                            <div>
                                                <label className="block text-xs font-medium text-mckinsey-grey mb-1">현재 나이</label>
                                                <div className="flex items-center border-b border-mckinsey-border pb-1">
                                                    <input type="tel" value={cdState.age === 0 ? '' : cdState.age} onChange={(e) => {
                                                        let clean = e.target.value.replace(/[^0-9]/g, '').replace(/^0+(?!$)/, '');
                                                        if (clean === '') clean = '0';
                                                        setCdState({...cdState, age: Number(clean)})
                                                    }} className="w-full bg-transparent outline-none font-serif text-lg text-mckinsey-navy" />
                                                    <span className="text-xs text-mckinsey-grey">세</span>
                                                </div>
                                            </div>
                                            <div>
                                                <label className="block text-xs font-medium text-mckinsey-grey mb-1">준비 기간 (년)</label>
                                                <div className="flex items-center border-b border-mckinsey-border pb-1">
                                                    <input type="number" value={cdState.years} onChange={(e) => setCdState({...cdState, years: Number(e.target.value)})} className="w-full bg-transparent outline-none font-serif text-lg text-mckinsey-navy" />
                                                    <span className="text-xs text-mckinsey-grey">년</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <label className="block text-xs font-medium text-mckinsey-grey mb-1">목표 금액</label>
                                            <input type="text" value={formatMoney(cdState.amount)} onChange={(e) => setCdState({...cdState, amount: parseMoney(e.target.value)})} className="w-full bg-transparent border-b border-mckinsey-border pb-1 outline-none font-serif text-lg text-mckinsey-navy text-right" />
                                            <div className="flex gap-1 mt-2">
                                                {[50000000, 100000000, 300000000].map(amt => (
                                                    <button key={amt} onClick={() => setCdState({...cdState, amount: amt})} className="flex-1 bg-mckinsey-light text-[10px] text-mckinsey-grey py-1 hover:bg-mckinsey-border transition-colors">
                                                        {(amt/100000000) >= 1 ? (amt/100000000) + '억' : (amt/10000) + '만'}
                                                    </button>
                                                ))}
                                            </div>
                                        </div>
                                        <div>
                                            <label className="block text-xs font-medium text-red-800 mb-1">지연 기간 (년)</label>
                                            <input type="range" min="1" max={cdState.years - 1} value={cdState.delay} onChange={(e) => setCdState({...cdState, delay: Number(e.target.value)})} className="w-full h-1 bg-red-100 rounded-lg appearance-none cursor-pointer accent-red-700" />
                                            <div className="text-right text-sm font-bold text-red-700">{cdState.delay}년 늦게 시작</div>
                                        </div>
                                    </div>
                                </div>
                                <div className="md:col-span-7 space-y-4">
                                    <div className="bg-mckinsey-light border-l-4 border-mckinsey-blue p-5">
                                        <div className="flex justify-between items-center mb-3">
                                            <span className="font-bold text-mckinsey-navy text-sm">지금 시작할 경우 ({cdState.age}세)</span>
                                            <span className="text-[10px] bg-white border border-mckinsey-blue text-mckinsey-blue px-2 py-0.5 uppercase tracking-wider">Optimal</span>
                                        </div>
                                        <div className="flex justify-between items-end">
                                            <div>
                                                <p className="text-xs text-mckinsey-grey mb-1">필요 월 저축액</p>
                                                <p className="text-2xl font-serif text-mckinsey-navy">{formatMoney(cdResult.nowPayment)}원</p>
                                            </div>
                                            <div className="text-right">
                                                <p className="text-xs text-mckinsey-grey">총 납입원금</p>
                                                <p className="font-medium text-mckinsey-navy">{formatMoney(cdResult.nowTotal)}</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div className="bg-red-50 border-l-4 border-red-700 p-5">
                                        <div className="flex justify-between items-center mb-3">
                                            <span className="font-bold text-red-900 text-sm">{cdState.delay}년 뒤 시작할 경우 ({cdState.age + cdState.delay}세)</span>
                                            <span className="text-[10px] bg-white border border-red-700 text-red-700 px-2 py-0.5 uppercase tracking-wider">Warning</span>
                                        </div>
                                        <div className="flex justify-between items-end">
                                            <div>
                                                <p className="text-xs text-red-800 mb-1">필요 월 저축액</p>
                                                <p className="text-2xl font-serif text-red-900">{formatMoney(cdResult.delayedPayment)}원</p>
                                            </div>
                                            <div className="text-right">
                                                <p className="text-xs text-red-800">총 납입원금</p>
                                                <p className="font-medium text-red-900">{formatMoney(cdResult.delayedTotal)}</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div className="bg-mckinsey-navy text-white p-5 text-center mt-4">
                                        <p className="text-xs uppercase tracking-widest text-gray-400 mb-2">Cost of Delay (Opportunity Cost)</p>
                                        <p className="text-3xl font-serif">+{formatMoney(cdResult.cost)}원</p>
                                        <p className="text-xs text-gray-400 mt-2">망설임의 대가: 더 많은 원금을 투입해야 합니다.</p>
                                    </div>

                                    {/* AI Widget Injection for Delay Cost */}
                                    <AIInsightWidget 
                                        apiKey={apiKey}
                                        title="AI Behavioral Insight"
                                        buttonLabel="게으름의 대가 분석"
                                        promptContext={`
                                            [상황 분석]
                                            사용자 나이: ${cdState.age}세
                                            목표 금액: ${formatMoney(cdState.amount)}원
                                            준비 기간: ${cdState.years}년
                                            지연 기간: ${cdState.delay}년 늦게 시작
                                            
                                            [결과 비교]
                                            1. 지금 시작 시 월 저축액: ${formatMoney(cdResult.nowPayment)}원
                                            2. ${cdState.delay}년 지연 시 월 저축액: ${formatMoney(cdResult.delayedPayment)}원
                                            
                                            [핵심 손실]
                                            총 추가 납입 원금(게으름 비용): ${formatMoney(cdResult.cost)}원
                                            
                                            행동경제학적 관점에서, 지금 당장 시작하지 않았을 때 발생하는 손실에 대해 강력하고 설득력 있는 경고 메시지를 작성해주세요.
                                            '복리의 마법'을 놓치는 것에 대한 아쉬움을 강조하세요.
                                        `}
                                    />
                                </div>
                            </div>
                        )}

                        {/* 3. Retirement Plan */}
                        {activeTab === 'retirement' && (
                            <div className="grid md:grid-cols-12 gap-10">
                                <div className="md:col-span-5 space-y-8">
                                    <div>
                                        <h4 className="font-serif text-xl text-mckinsey-navy mb-4">Retirement Goal</h4>
                                        <div className="grid grid-cols-2 gap-4 mb-4">
                                            <div>
                                                <label className="block text-xs font-medium text-mckinsey-grey mb-1">현재 나이</label>
                                                <input type="tel" value={rpState.age} onChange={(e) => setRpState({...rpState, age: Number(e.target.value)})} className="w-full bg-transparent border-b border-mckinsey-border py-1 text-center font-serif text-lg" />
                                            </div>
                                            <div>
                                                <label className="block text-xs font-medium text-mckinsey-grey mb-1">은퇴 나이</label>
                                                <input type="tel" value={rpState.retireAge} onChange={(e) => setRpState({...rpState, retireAge: Number(e.target.value)})} className="w-full bg-transparent border-b border-mckinsey-border py-1 text-center font-serif text-lg" />
                                            </div>
                                        </div>
                                        <div>
                                            <label className="block text-xs font-medium text-mckinsey-grey mb-1">희망 월 은퇴생활비</label>
                                            <div className="flex items-center border-b border-mckinsey-border pb-1">
                                                <input type="text" value={formatMoney(rpState.pension)} onChange={(e) => setRpState({...rpState, pension: parseMoney(e.target.value)})} className="w-full bg-transparent outline-none font-serif text-xl text-mckinsey-navy text-right" />
                                                <span className="text-sm text-mckinsey-grey ml-2">원/월</span>
                                            </div>
                                        </div>
                                        <div className="mt-4 p-4 bg-mckinsey-light">
                                            <p className="text-xs text-mckinsey-grey uppercase tracking-widest mb-1">Required Corpus (Target)</p>
                                            <p className="font-serif text-2xl text-mckinsey-navy">{formatMoney(rpResult.targetCorpus)}원</p>
                                            <p className="text-[10px] text-mckinsey-grey mt-1">* Based on 7% Dividend Yield</p>
                                        </div>
                                    </div>

                                    <div>
                                        <h4 className="font-serif text-xl text-mckinsey-navy mb-4">Action Plan</h4>
                                        <div className="space-y-4">
                                            <div>
                                                <div className="flex justify-between text-xs mb-1">
                                                    <span className="font-bold text-mckinsey-navy">Accumulation Phase (저축)</span>
                                                    <span>{rpState.saveYears}년</span>
                                                </div>
                                                <input type="range" min="1" max="30" value={rpState.saveYears} onChange={(e) => setRpState({...rpState, saveYears: Number(e.target.value)})} className="w-full h-1 bg-mckinsey-light rounded-lg appearance-none cursor-pointer accent-mckinsey-blue" />
                                            </div>
                                            <div>
                                                <div className="flex justify-between text-xs mb-1">
                                                    <span className="font-bold text-mckinsey-grey">Deferral Phase (거치)</span>
                                                    <span>{rpState.deferYears}년</span>
                                                </div>
                                                <input type="range" min="0" max="30" value={rpState.deferYears} onChange={(e) => setRpState({...rpState, deferYears: Number(e.target.value)})} className="w-full h-1 bg-mckinsey-light rounded-lg appearance-none cursor-pointer accent-mckinsey-grey" />
                                            </div>
                                            {(rpState.saveYears + rpState.deferYears) !== (rpState.retireAge - rpState.age) && (
                                                <div className="flex items-center gap-2 text-xs text-orange-600 bg-orange-50 p-2 border border-orange-100">
                                                    <AlertCircle className="w-4 h-4" />
                                                    <span>기간 불일치: 은퇴까지 {rpState.retireAge - rpState.age}년 남았습니다.</span>
                                                </div>
                                            )}
                                        </div>
                                    </div>
                                </div>

                                <div className="md:col-span-7 flex flex-col justify-center">
                                    <div className="bg-mckinsey-navy text-white p-8 relative overflow-hidden shadow-2xl">
                                        <div className="absolute top-0 right-0 w-32 h-32 bg-white opacity-5 rounded-full blur-3xl transform translate-x-1/2 -translate-y-1/2"></div>
                                        <div className="text-center mb-10 relative z-10">
                                            <p className="text-xs uppercase tracking-widest text-gray-400 mb-3">Required Monthly Saving</p>
                                            <p className="text-5xl font-serif text-white">{formatMoney(rpResult.requiredMonthly)}원</p>
                                            <p className="text-xs text-gray-400 mt-4 border-t border-gray-700 pt-4 inline-block px-4">
                                                {rpState.saveYears}년 납입 후 {rpState.deferYears}년 복리 운용 시
                                            </p>
                                        </div>
                                        
                                        <div className="space-y-4 relative z-10">
                                            <div className="flex items-center justify-between text-sm border-b border-gray-700 pb-2">
                                                <span className="text-gray-300">Step 1. Seed Money</span>
                                                <span className="font-serif">{formatMoney(rpResult.requiredFVSave)}</span>
                                            </div>
                                            {rpState.deferYears > 0 && (
                                                <div className="flex items-center justify-between text-sm border-b border-gray-700 pb-2">
                                                    <span className="text-gray-300">Step 2. Compounding</span>
                                                    <span className="font-serif text-mckinsey-blue">{formatMoney(rpResult.targetCorpus)}</span>
                                                </div>
                                            )}
                                            <div className="flex items-center justify-between text-sm pt-2">
                                                <span className="text-gray-300">Step 3. Cash Flow</span>
                                                <span className="font-serif text-xl text-yellow-500">월 {formatMoney(rpState.pension)}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        )}
                    </div>
                </div>
            );
        };

        // ==========================================
        // 3. Life Cycle Component
        // ==========================================
        const LifeCycle = () => {
            const [currentAge, setCurrentAge] = useState(30);
            const [goals, setGoals] = useState([
                { id: 2, age: 35, label: '첫 주택 마련', amount: 300000000, category: '30s' },
                { id: 3, age: 60, label: '은퇴 시작', amount: 500000000, category: 'retired' },
            ]);
            const [input, setInput] = useState({ years: 3, label: '', amount: '' });
            const [selectedTab, setSelectedTab] = useState('30s');
            
            const AGE_GROUPS = [
                { id: '30s', label: '30대', range: [30, 39], color: 'bg-green-100' },
                { id: '40s', label: '40대', range: [40, 49], color: 'bg-yellow-100' },
                { id: '50s', label: '50대', range: [50, 59], color: 'bg-orange-100' },
                { id: 'retired', label: '은퇴후', range: [60, 100], color: 'bg-gray-100' },
            ];
            const COMMON_EVENTS = {
                '30s': [{ name: '주택 마련', defaultCost: 300000000, icon: Home }, { name: '결혼 자금', defaultCost: 50000000, icon: Coins }],
                '40s': [{ name: '자녀 교육', defaultCost: 100000000, icon: GraduationCap }, { name: '주택 확장', defaultCost: 200000000, icon: Home }],
                '50s': [{ name: '자녀 결혼', defaultCost: 100000000, icon: Umbrella }, { name: '은퇴 준비', defaultCost: 500000000, icon: Coins }],
                'retired': [{ name: '의료비', defaultCost: 50000000, icon: Stethoscope }, { name: '여행', defaultCost: 30000000, icon: Plane }],
            };

            const addGoal = () => {
                if (!input.label) return;
                const newGoal = { id: Date.now(), age: currentAge + Number(input.years), label: input.label, amount: parseMoney(input.amount) || 0, category: 'custom' };
                setGoals([...goals, newGoal].sort((a,b) => a.age - b.age));
                setInput({ ...input, label: '', amount: '' });
            };
            const addPreset = (evt) => {
                const newGoal = { id: Date.now(), age: currentAge + 5, label: evt.name, amount: evt.defaultCost, category: 'preset' };
                setGoals([...goals, newGoal].sort((a,b) => a.age - b.age));
            };

            return (
                <div className="flex flex-col lg:flex-row h-full pb-10 gap-8 animate-fade-in max-w-7xl mx-auto">
                    {/* Control Panel */}
                    <div className="w-full lg:w-96 bg-white border border-mckinsey-border shadow-soft flex flex-col">
                        <div className="p-6 border-b border-mckinsey-border bg-mckinsey-navy text-white">
                             <h3 className="font-serif text-xl flex items-center gap-2"><Calendar className="w-5 h-5"/> Life Events</h3>
                        </div>
                        <div className="p-6 space-y-8 flex-1 overflow-y-auto">
                            <div>
                                <label className="block text-xs font-bold text-mckinsey-grey uppercase tracking-widest mb-2">Current Age</label>
                                <input type="number" value={currentAge} onChange={(e) => setCurrentAge(Number(e.target.value))} className="w-full border-b border-mckinsey-border py-2 text-xl font-serif text-mckinsey-navy focus:border-mckinsey-blue outline-none" />
                            </div>

                            <div>
                                <label className="block text-xs font-bold text-mckinsey-grey uppercase tracking-widest mb-3">Event Presets</label>
                                <div className="flex gap-2 mb-3 overflow-x-auto pb-1">
                                    {Object.keys(COMMON_EVENTS).map(key => (
                                        <button key={key} onClick={() => setSelectedTab(key)} className={`text-xs px-3 py-1 border ${selectedTab === key ? 'bg-mckinsey-navy text-white border-mckinsey-navy' : 'text-mckinsey-grey border-mckinsey-border'}`}>{key}</button>
                                    ))}
                                </div>
                                <div className="grid grid-cols-2 gap-2">
                                    {COMMON_EVENTS[selectedTab]?.map((evt, idx) => (
                                        <button key={idx} onClick={() => addPreset(evt)} className="flex items-center gap-2 p-2 border border-mckinsey-border hover:bg-mckinsey-light text-xs text-left">
                                            <evt.icon className="w-4 h-4 text-mckinsey-blue" /> {evt.name}
                                        </button>
                                    ))}
                                </div>
                            </div>

                            <div className="space-y-4 pt-4 border-t border-mckinsey-border">
                                <div className="grid grid-cols-2 gap-4">
                                    <div>
                                        <label className="text-[10px] text-mckinsey-grey block mb-1">Years Later</label>
                                        <input type="number" value={input.years} onChange={(e) => setInput({...input, years: e.target.value})} className="w-full border-b border-mckinsey-border py-1 text-sm outline-none" />
                                    </div>
                                    <div>
                                        <label className="text-[10px] text-mckinsey-grey block mb-1">Amount</label>
                                        <input type="text" value={input.amount} onChange={(e) => setInput({...input, amount: e.target.value})} className="w-full border-b border-mckinsey-border py-1 text-sm outline-none" />
                                    </div>
                                </div>
                                <input type="text" value={input.label} onChange={(e) => setInput({...input, label: e.target.value})} placeholder="Event Name" className="w-full border-b border-mckinsey-border py-1 text-sm outline-none" />
                                <button onClick={addGoal} className="w-full bg-mckinsey-navy text-white text-xs font-bold py-3 uppercase tracking-wider hover:bg-opacity-90">Add Event</button>
                            </div>
                        </div>
                    </div>

                    {/* Timeline Visual */}
                    <div className="flex-1 bg-white border border-mckinsey-border shadow-soft p-8 relative overflow-hidden flex flex-col">
                        <div className="mb-6 flex justify-between items-end">
                            <h3 className="font-serif text-2xl text-mckinsey-navy">Cash Flow Timeline</h3>
                            <div className="text-right">
                                <p className="text-xs text-mckinsey-grey uppercase tracking-widest">Total Required</p>
                                <p className="text-xl font-bold text-mckinsey-navy">{formatMoney(goals.reduce((a,b) => a + b.amount, 0))}원</p>
                            </div>
                        </div>
                        <div className="flex-1 overflow-x-auto relative custom-scrollbar">
                            <div className="flex h-full items-end pb-10 min-w-max pt-20 px-4">
                                {Array.from({ length: 61 }, (_, i) => 30 + i).map(age => {
                                    const ageGoals = goals.filter(g => g.age === age);
                                    const isCurrent = age === currentAge;
                                    return (
                                        <div key={age} className={`flex-shrink-0 w-16 relative group ${isCurrent ? 'z-10' : ''}`} style={{height: '100%'}}>
                                            <div className="absolute bottom-0 left-1/2 w-px h-4 bg-gray-300 transform -translate-x-1/2 group-hover:h-full group-hover:bg-gray-100 transition-all"></div>
                                            {isCurrent && <div className="absolute bottom-0 left-1/2 w-0.5 h-full bg-mckinsey-blue opacity-30 transform -translate-x-1/2"></div>}
                                            <span className={`absolute bottom-[-24px] left-1/2 transform -translate-x-1/2 text-xs ${isCurrent ? 'text-mckinsey-blue font-bold' : 'text-gray-400'} ${age % 5 === 0 ? 'opacity-100' : 'opacity-0 group-hover:opacity-100'}`}>{age}</span>
                                            
                                            {/* Goals */}
                                            <div className="absolute bottom-8 w-full flex flex-col-reverse items-center gap-1">
                                                {ageGoals.map(g => (
                                                    <div key={g.id} className="bg-white border border-mckinsey-blue shadow-md p-2 w-32 relative hover:z-20 hover:scale-105 transition-transform">
                                                        <div className="text-[10px] font-bold text-mckinsey-navy truncate">{g.label}</div>
                                                        <div className="text-[10px] text-mckinsey-blue truncate">{formatMoney(g.amount)}</div>
                                                        <div className="absolute -bottom-1 left-1/2 w-2 h-2 bg-white border-b border-r border-mckinsey-blue transform -translate-x-1/2 rotate-45"></div>
                                                    </div>
                                                ))}
                                            </div>
                                        </div>
                                    )
                                })}
                            </div>
                        </div>
                    </div>
                </div>
            );
        }

        // ==========================================
        // 4. Retirement Withdrawal Component
        // ==========================================
        const WithdrawalSimulator = () => {
            const [age, setAge] = useState(50);
            const [funds, setFunds] = useState([
                { id: 1, name: '국민연금', startAge: 65, endAge: 100, amount: 1500, inflation: true },
                { id: 2, name: '개인연금', startAge: 60, endAge: 80, amount: 500, inflation: false },
                { id: 3, name: '퇴직연금', startAge: 60, endAge: 70, amount: 1000, inflation: false },
            ]);
            const chartRef = useRef(null);
            const chartInstance = useRef(null);
            const FUND_COLORS = ['#051c2c', '#005eb8', '#636c72', '#aeb5bc']; // McKinsey Palette

            const handleFundChange = (id, field, val) => setFunds(funds.map(f => f.id === id ? { ...f, [field]: val } : f));
            const toggleInflation = (id) => setFunds(funds.map(f => f.id === id ? { ...f, inflation: !f.inflation } : f));
            const removeFund = (id) => setFunds(funds.filter(f => f.id !== id));

            const analysis = useMemo(() => {
                const data = [];
                for (let a = age; a <= 90; a++) {
                    let nominalTotal = 0;
                    const fundValues = {};
                    funds.forEach(f => {
                        let amt = 0;
                        if (a >= f.startAge && a <= f.endAge) {
                            amt = f.amount;
                            if (f.inflation) amt = amt * Math.pow(1.015, a - f.startAge);
                        }
                        fundValues[f.id] = amt;
                        nominalTotal += amt;
                    });
                    const pv = nominalTotal / Math.pow(1.02, a - age);
                    data.push({ age: a, nominalTotal, pv, fundValues });
                }
                return data;
            }, [age, funds]);

            useEffect(() => {
                if (chartRef.current) {
                    const ctx = chartRef.current.getContext('2d');
                    if (chartInstance.current) chartInstance.current.destroy();

                    const datasets = funds.map((fund, idx) => ({
                        type: 'bar',
                        label: fund.name,
                        data: analysis.map(d => d.fundValues[fund.id] || 0),
                        backgroundColor: FUND_COLORS[idx % FUND_COLORS.length],
                        stack: 'stack0', order: 2, barPercentage: 0.6
                    }));
                    datasets.push({
                        type: 'line',
                        label: 'Real Value (Inflation Adj.)',
                        data: analysis.map(d => d.pv),
                        borderColor: '#dc2626', // Red for emphasis
                        borderWidth: 2, pointRadius: 0, tension: 0.4, order: 1
                    });

                    chartInstance.current = new Chart(ctx, {
                        data: { labels: analysis.map(d => `${d.age}`), datasets },
                        options: {
                            responsive: true, maintainAspectRatio: false,
                            interaction: { mode: 'index', intersect: false },
                            scales: { x: { grid: { display: false }, stacked: true }, y: { grid: { borderDash: [2, 4] }, stacked: true } },
                            plugins: { legend: { position: 'bottom', labels: { usePointStyle: true } } }
                        }
                    });
                }
                return () => { if (chartInstance.current) chartInstance.current.destroy(); };
            }, [analysis, funds]);

            return (
                <div className="grid lg:grid-cols-12 gap-8 animate-fade-in pb-10 max-w-7xl mx-auto">
                    <div className="lg:col-span-8 space-y-8">
                        <div className="bg-white border border-mckinsey-border shadow-soft p-6">
                            <div className="flex justify-between items-center mb-6">
                                <h3 className="font-serif text-xl text-mckinsey-navy">Income Sources</h3>
                                <div className="flex items-center gap-2 text-sm">
                                    <span className="text-mckinsey-grey">Current Age:</span>
                                    <input type="number" value={age} onChange={(e) => setAge(Number(e.target.value))} className="w-12 text-center border-b border-mckinsey-navy font-bold" />
                                </div>
                            </div>
                            <div className="overflow-x-auto">
                                <table className="w-full text-sm report-table">
                                    <thead>
                                        <tr>
                                            <th className="text-left">Source Name</th>
                                            <th className="text-center w-20">Start</th>
                                            <th className="text-center w-20">End</th>
                                            <th className="text-right w-32">Monthly (KRW)</th>
                                            <th className="text-center w-20">Inflation</th>
                                            <th className="w-10"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {funds.map((f, idx) => (
                                            <tr key={f.id}>
                                                <td><input type="text" value={f.name} onChange={(e) => handleFundChange(f.id, 'name', e.target.value)} className="w-full outline-none bg-transparent font-medium" /></td>
                                                <td><input type="number" value={f.startAge} onChange={(e) => handleFundChange(f.id, 'startAge', Number(e.target.value))} className="w-full text-center outline-none bg-transparent" /></td>
                                                <td><input type="number" value={f.endAge} onChange={(e) => handleFundChange(f.id, 'endAge', Number(e.target.value))} className="w-full text-center outline-none bg-transparent" /></td>
                                                <td><input type="number" value={f.amount} onChange={(e) => handleFundChange(f.id, 'amount', Number(e.target.value))} className="w-full text-right outline-none bg-transparent font-bold text-mckinsey-navy" /></td>
                                                <td className="text-center"><input type="checkbox" checked={f.inflation} onChange={() => toggleInflation(f.id)} className="cursor-pointer" /></td>
                                                <td className="text-center"><button onClick={() => removeFund(f.id)} className="text-gray-400 hover:text-red-500"><X className="w-4 h-4"/></button></td>
                                            </tr>
                                        ))}
                                    </tbody>
                                </table>
                            </div>
                            <button onClick={() => setFunds([...funds, { id: Date.now(), name: 'New Source', startAge: 65, endAge: 85, amount: 0, inflation: false }])} className="mt-4 text-xs font-bold uppercase tracking-widest text-mckinsey-blue hover:underline flex items-center gap-1"><PlusCircle className="w-4 h-4"/> Add Source</button>
                        </div>
                        
                        <div className="bg-white border border-mckinsey-border shadow-soft p-6 h-96">
                             <h4 className="text-xs font-bold text-mckinsey-grey uppercase tracking-widest mb-4">Cash Flow Projection</h4>
                            <div className="h-full pb-8"><canvas ref={chartRef}></canvas></div>
                        </div>
                    </div>

                    <div className="lg:col-span-4 space-y-6">
                        <div className="bg-mckinsey-navy text-white p-6 shadow-soft">
                            <h4 className="font-serif text-lg mb-1">Projected Income at 65</h4>
                            <p className="text-xs text-gray-400 mb-6">Simulation Snapshot</p>
                            
                            <div className="space-y-6">
                                <div>
                                    <p className="text-xs uppercase tracking-widest text-gray-400 mb-1">Nominal (명목)</p>
                                    <p className="text-3xl font-serif">{analysis.find(d => d.age === 65)?.nominalTotal.toLocaleString() || '-'} <span className="text-sm font-sans">천원</span></p>
                                </div>
                                <div className="pt-4 border-t border-gray-700">
                                    <p className="text-xs uppercase tracking-widest text-gray-400 mb-1">Real Value (실질)</p>
                                    <p className="text-2xl font-serif text-mckinsey-blue">{Math.round(analysis.find(d => d.age === 65)?.pv || 0).toLocaleString()} <span className="text-sm font-sans text-white">천원</span></p>
                                </div>
                            </div>
                        </div>

                        <div className="bg-white border border-mckinsey-border shadow-soft flex flex-col h-[400px]">
                            <div className="p-4 border-b border-mckinsey-border bg-mckinsey-light font-bold text-xs text-mckinsey-navy uppercase tracking-widest">Data Table</div>
                            <div className="overflow-y-auto custom-scrollbar flex-1">
                                <table className="w-full text-xs text-right report-table">
                                    <thead className="sticky top-0 z-10">
                                        <tr><th className="text-center">Age</th><th>Nominal</th><th>Real</th></tr>
                                    </thead>
                                    <tbody>
                                        {analysis.map(d => (
                                            <tr key={d.age}>
                                                <td className="text-center font-bold text-mckinsey-grey bg-mckinsey-light">{d.age}</td>
                                                <td>{Math.round(d.nominalTotal).toLocaleString()}</td>
                                                <td className="font-bold text-mckinsey-navy">{Math.round(d.pv).toLocaleString()}</td>
                                            </tr>
                                        ))}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            )
        }

        // ==========================================
        // Main Application Shell
        // ==========================================
        const App = () => {
            const [view, setView] = useState('wealth');
            const [isMenuOpen, setIsMenuOpen] = useState(false);
            const [globalApiKey, setGlobalApiKey] = useState('');
            const [isSettingsOpen, setIsSettingsOpen] = useState(false);

            useEffect(() => {
                const storedKey = localStorage.getItem('gemini_api_key');
                if (storedKey) setGlobalApiKey(storedKey);
            }, []);

            const saveApiKey = (key) => {
                setGlobalApiKey(key);
                localStorage.setItem('gemini_api_key', key);
                setIsSettingsOpen(false);
            };

            const MenuItems = [
                { id: 'wealth', label: 'Wealth Growth' },
                { id: 'sales', label: 'Financial Plan' },
                { id: 'life', label: 'Life Cycle' },
                { id: 'withdrawal', label: 'Retirement Exit' },
            ];

            return (
                <div className="flex h-screen bg-white w-full font-sans text-mckinsey-navy">
                    {/* Settings Modal */}
                    {isSettingsOpen && (
                        <div className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
                            <div className="bg-white w-full max-w-md p-6 shadow-2xl animate-fade-in border border-mckinsey-border">
                                <div className="flex justify-between items-center mb-6">
                                    <h3 className="font-serif text-xl text-mckinsey-navy flex items-center gap-2">
                                        <Settings className="w-5 h-5" /> Settings
                                    </h3>
                                    <button onClick={() => setIsSettingsOpen(false)} className="text-mckinsey-grey hover:text-mckinsey-navy"><X className="w-5 h-5"/></button>
                                </div>
                                <div className="space-y-4">
                                    <div>
                                        <label className="block text-xs font-bold text-mckinsey-grey uppercase tracking-widest mb-2">Google Gemini API Key</label>
                                        <div className="relative">
                                            <Key className="w-4 h-4 absolute left-3 top-3 text-mckinsey-grey" />
                                            <input 
                                                type="password" 
                                                placeholder="Enter your API Key" 
                                                className="w-full pl-10 pr-4 py-2 border border-mckinsey-border focus:border-mckinsey-blue outline-none text-sm font-mono"
                                                defaultValue={globalApiKey}
                                                onBlur={(e) => saveApiKey(e.target.value)}
                                            />
                                        </div>
                                        <p className="text-[10px] text-mckinsey-grey mt-2">
                                            * 키는 브라우저에만 저장되며 서버로 전송되지 않습니다.<br/>
                                            * AI 기능을 사용하려면 키가 필요합니다.
                                        </p>
                                    </div>
                                    <button onClick={() => setIsSettingsOpen(false)} className="w-full bg-mckinsey-navy text-white py-2 text-xs font-bold uppercase tracking-widest hover:bg-opacity-90">Confirm</button>
                                </div>
                            </div>
                        </div>
                    )}

                    {/* Mobile Menu Button */}
                    <button onClick={() => setIsMenuOpen(!isMenuOpen)} className="md:hidden fixed top-4 right-4 z-50 bg-mckinsey-navy text-white p-2 shadow-lg">
                        {isMenuOpen ? <X size={20}/> : <Menu size={20}/>}
                    </button>

                    {/* Sidebar */}
                    <aside className={`
                        fixed md:relative top-0 left-0 h-full w-64 bg-mckinsey-navy text-white z-40 transition-transform duration-300 ease-in-out shadow-2xl md:shadow-none flex flex-col
                        ${isMenuOpen ? 'translate-x-0' : '-translate-x-full md:translate-x-0'}
                    `}>
                        <div className="p-8 border-b border-gray-700">
                            <div className="flex items-center gap-3 mb-1">
                                <div className="w-6 h-6 bg-white flex items-center justify-center text-mckinsey-navy font-bold text-xs">1</div>
                                <h1 className="font-serif text-lg tracking-wide">The One</h1>
                            </div>
                            <p className="text-[10px] text-gray-400 uppercase tracking-[0.2em] pl-9">Financial Suite</p>
                        </div>
                        
                        <nav className="p-4 space-y-1 flex-1">
                            {MenuItems.map(item => (
                                <button
                                    key={item.id}
                                    onClick={() => { setView(item.id); setIsMenuOpen(false); }}
                                    className={`w-full flex items-center justify-between px-4 py-4 text-xs font-bold uppercase tracking-widest transition-all duration-200 border-l-2
                                        ${view === item.id 
                                            ? 'border-mckinsey-blue text-white bg-white/5' 
                                            : 'border-transparent text-gray-400 hover:text-white hover:bg-white/5'
                                        }
                                    `}
                                >
                                    {item.label}
                                    {view === item.id && <ChevronRight size={14} className="text-mckinsey-blue"/>}
                                </button>
                            ))}
                        </nav>
                        
                        <div className="p-4 border-t border-gray-700">
                            <button 
                                onClick={() => setIsSettingsOpen(true)}
                                className="w-full flex items-center gap-3 px-4 py-3 text-xs text-gray-400 hover:text-white hover:bg-white/5 transition-all rounded"
                            >
                                <Settings size={16} />
                                <span>Settings (API Key)</span>
                            </button>
                        </div>

                        <div className="p-8 pt-4">
                            <p className="text-[9px] text-gray-500 leading-relaxed font-serif italic">
                                "Compound interest is the eighth wonder of the world."
                            </p>
                        </div>
                    </aside>

                    {/* Overlay for mobile */}
                    {isMenuOpen && <div onClick={() => setIsMenuOpen(false)} className="fixed inset-0 bg-black/50 z-30 md:hidden"></div>}

                    {/* Main Content Area */}
                    <main className="flex-1 h-full overflow-y-auto overflow-x-hidden relative flex flex-col bg-white">
                        <header className="sticky top-0 z-20 px-8 py-5 flex items-center justify-between bg-white/90 backdrop-blur-sm border-b border-mckinsey-border">
                            <h2 className="font-serif text-2xl text-mckinsey-navy">
                                {MenuItems.find(i => i.id === view)?.label}
                            </h2>
                            <div className="hidden md:flex items-center gap-2">
                                <span className={`w-2 h-2 rounded-full ${globalApiKey ? 'bg-green-500' : 'bg-gray-300'}`}></span>
                                <span className="text-[10px] font-bold text-mckinsey-grey uppercase tracking-widest">
                                    {globalApiKey ? 'AI Ready' : 'AI Offline'}
                                </span>
                            </div>
                        </header>

                        <div className="p-6 md:p-10 w-full max-w-7xl mx-auto flex-1">
                            {view === 'wealth' && <WealthSimulator apiKey={globalApiKey} />}
                            {view === 'sales' && <SalesMaster apiKey={globalApiKey} />}
                            {view === 'life' && <LifeCycle />}
                            {view === 'withdrawal' && <WithdrawalSimulator />}
                        </div>
                    </main>
                </div>
            );
        };

        const root = createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
</html>
